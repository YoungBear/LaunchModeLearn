<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.launchmode">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.launchmode.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.launchmode.activity.StandardActivity"
            android:label="@string/standard_name"
            android:exported="true"
            android:launchMode="standard">
        </activity>
        <activity
            android:name="com.example.launchmode.activity.SingleTopActivity"
            android:label="@string/single_top_name"
            android:exported="true"
            android:launchMode="singleTop">
        </activity>
        <activity
            android:name="com.example.launchmode.activity.SingleTaskActivity"
            android:label="@string/single_task_name"
            android:exported="true"
            android:launchMode="singleTask">
        </activity>
        <activity
            android:name="com.example.launchmode.activity.SingleInstanceActivity"
            android:label="@string/single_instance_name"
            android:exported="true"
            android:launchMode="singleInstance">
        </activity>
    </application>

</manifest>